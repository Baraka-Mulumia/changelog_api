{
  "name": "api-design-v4",
  "version": "1.0.0",
  "description": "Learning API Design with Node.js v4 by Scott Moss - Front end Masters",
  "main": "dist/index.js",
  "scripts": {
    "build:types": "tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn  type-check -- --watch",
    "copy:files": "copyfiles -u 1 \"src/**/*.{json,graphql,css,html}\" dist",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "build": "yarn build:js && yarn copy:files",
    "bundle": "yarn build:types && yarn build",
    "restart": "rimraf dist && yarn start",
    "dev": "nodemon --exec yarn restart",
    "serve": "node dist/index.js",
    "start": "yarn build && yarn serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/barakamulumia/API-design-v4"
  },
  "keywords": [
    "node",
    "folder-structure",
    "node-template"
  ],
  "author": "Baraka M Mulumia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/barakamulumia/API-design-v4/issues"
  },
  "homepage": "https://github.com/barakamulumia/API-design-v4#readme",
  "dependencies": {
    "atob": "^2.1.2",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "btoa": "^1.2.1",
    "chalk": "4.1.2",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "joi": "^17.6.1",
    "js-base64": "^3.7.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@types/atob": "^2.1.2",
    "@types/btoa": "^1.2.3",
    "@types/copyfiles": "^2.4.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/lodash": "^4.14.185",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.23",
    "@types/uuid": "^8.3.4",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "prisma": "^4.9.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
